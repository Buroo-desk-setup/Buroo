---
layout: "base.njk"
---

<div class="container px-6 py-10 mx-auto">
<section class="bg-white dark:bg-gray-900">
  <div class="container px-6 py-10 mx-auto">
    <div class="flex">
        <div>
          <img class="relative z-10 object-cover w-full rounded-md h-96 xl:h-[30rem]"
            src="{{ image }}"
            alt="">

          <div class="relative md:max-w-xl z-20 max-w-lg p-6 mx-auto -mt-20 bg-white rounded-md shadow dark:bg-gray-900">
            <a href="{{ post.url }}" class="font-semibold text-gray-800 hover:underline dark:text-white md:text-xl">
              {{ title }}
            </a>

            <p class="mt-3 text-sm text-gray-500 dark:text-gray-300 md:text-sm">
              {{ description }}
            </p>

            <p class="mt-3 text-sm text-green-500">{{ releasedate }}</p>
          </div>
          <div>
            {{ content | safe }}
          </div>
        </div>
    </div>
  </div>
</section>
</div>